<div class="container m-5 text-center" style="justify-content: center;!important ">
    <table class="table table-success table-striped">
        <thead>
            <tr>
                <th scope="col">Bus</th>
                <th scope="col">Numero</th>
                <th scope="col">Data</th>
                <th scope="col">Ora Partenza</th>
                <th scope="col">Ora Arrivo</th>
                <th scope="col">Prezzo</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each result}}
                <tr>
                    <td>{{this.partenza}} - {{this.arrivo}}</td>
                    <td>{{this.bus}}</td>
                    <td>{{this.to_char}}</td>
                    <td>{{this.ora_partenza}}</td>
                    <td>{{this.ora_arrivo}}</td>
                    <td>{{this.prezzo}}</td>
                    <td>
                        <a href="/mostraposti/{{this.id}}" class="btn btn-secondary">Scegli</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>